<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.detallesrecetas.DetallesRecetaPlatoPrincipal">

    <TextView
        android:id="@+id/nombrePlatoPrincipalDetalles"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:hint="Nombre"
        android:textColor="@color/design_default_color_error"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredientesPlatoPrincipal"
        android:layout_width="350dp"
        android:layout_height="225dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:hint="Ingredientes"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruccionesPlatoPrincipal" />

    <TextView
        android:id="@+id/instruccionesPlatoPrincipal"
        android:layout_width="350dp"
        android:layout_height="225dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:hint="Instruccion"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombrePlatoPrincipalDetalles" />

    <ImageView
        android:id="@+id/imagenPlatoPrincipalDetalles"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/plato_principal_2" />
</androidx.constraintlayout.widget.ConstraintLayout>